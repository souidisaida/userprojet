{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
<div class="panel panel-default col-sm-6">
    <div class="panel-heading">
        Formulaire modification Groupe
    </div>
    <div class="panel-body">
        <div class="col-sm-12">
            <form method="post" action="">
                <div class="form-group">
                    <label>username</label>
                    {% if form.username.vars.errors != '' %}
                        <div class="text-danger">
                            {{ form.username.vars.errors|replace({'ERROR: ': '' })|trim }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.username) }}
                </div>
                <div class="form-group">
                    <label>email</label>
                    {% if form.email.vars.errors != '' %}
                        <div class="text-danger">
                            {{ form.email.vars.errors|replace({'ERROR: ': '' })|trim }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    <label>groups</label>
                    {% if form.groups.vars.errors != '' %}
                        <div class="text-danger">
                            {{ form.groups.vars.errors|replace({'ERROR: ': '' })|trim }}
                        </div>
                    {% endif %}
                    {{ form_widget(form.groups) }}
                </div>
                <button type="submit" class="btn btn-primary">modifier</button>
                <a href="{{ path('user_index') }}">
                    <button type="button" class="btn btn-default">Retour</button>
                </a>
                {{ form_rest(form) }}

            </form>
        </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('.select2').select2();
        });
    </script>
{% endblock %}
